# Database
DATABASE_URL=postgresql://idm_user:your_password_here@localhost:5432/idm_db

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://idm.tcell.tj"]

# Application
DEBUG=False
APP_NAME=IDM System
APP_VERSION=1.0.0

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Email (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
TWOFA_ADMIN_EMAIL=

# LDAP / Active Directory
LDAP_ENABLED=false
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_BASE_DN=DC=example,DC=com
LDAP_BIND_DN=cn=service_account,DC=example,DC=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_USE_SSL=false
LDAP_TIMEOUT=10
